{
  "manifest_version": 3,
  "name": "Refocus",
  "short_name": "Refocus",
  "version": "0.0.1",
  "description": "Stay focused on YouTube with ReFocus â€” block distractions, hide recommendations, and watch only what truly matters.",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "192": "/icons/icon192.png"
  },
  "permissions": ["storage", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["index.js"]
    }
  ],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_popup": "index.html"
  }
}
